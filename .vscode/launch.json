{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/server.js",
      "console": "integratedTerminal", // Runs in VS Code terminal instead of Debug Console
      "env": {
        "NODE_ENV": "development" // Set environment variables
      }
    }
  ]
}

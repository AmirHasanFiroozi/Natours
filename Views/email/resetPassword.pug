extends emailBase

block content
  p Hi #{ firstName },
    p Forget your password ? submit a PATCH request with your password and passwordConfirm to #{url}.
    p (website for this action is not in access)
    table.btn.btn-primary(role="presentation", border="0", cellpadding="0", cellspacing="0")
      tbody
        tr
          td(align="left")
            table(role="presentation", border="0", cellpadding="0", cellspacing="0")
              tbody
                tr
                  td
                    a(href=`${url}`, target="_blank") Reset you password
    p If you don't forget your password please ignore this email.
